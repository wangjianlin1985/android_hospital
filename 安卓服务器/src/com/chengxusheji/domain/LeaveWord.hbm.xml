<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="LeaveWord" table="LeaveWord">

          <!-- 主键留言id -->
          <id name="leaveWordId" column="leaveWordId">
            <generator class="native"/>
          </id>

          <!-- 简单字符串属性: 标题 -->
          <property
            name="title"
            column="title"
            type="string"
            length="80"
          />

          <!-- 简单字符串属性: 留言内容 -->
          <property
            name="content"
            column="content"
            type="string"
            length="2000"
          />

          <!-- 简单字符串属性: 留言时间 -->
          <property
            name="addTime"
            column="addTime"
            type="string"
            length="20"
          />

          <!-- 多对一属性: 留言人 -->
          <many-to-one name="userObj"
            column="userObj"
            class="UserInfo"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单字符串属性: 回复内容 -->
          <property
            name="replyContent"
            column="replyContent"
            type="string"
            length="2000"
          />

          <!-- 简单字符串属性: 回复时间 -->
          <property
            name="replyTime"
            column="replyTime"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 回复的医生 -->
          <property
            name="replyDoctor"
            column="replyDoctor"
            type="string"
            length="20"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
